# Production Environment Configuration

# Application
NODE_ENV=production
PORT=80

# Database Configuration
DATABASE_NAME=monarch_prod
DATABASE_USER=monarch
DATABASE_PASSWORD=your-secure-database-password
NEO4J_PASSWORD=your-secure-neo4j-password
REDIS_PASSWORD=your-secure-redis-password

# Security
JWT_SECRET=your-super-secure-jwt-secret-for-production-min-32-chars
ENCRYPTION_KEY=your-32-character-encryption-key-12

# External Services
OPENAI_API_KEY=your-production-openai-key
ANTHROPIC_API_KEY=your-production-anthropic-key

# Email Service
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
FROM_EMAIL=noreply@monarch-legal.com

# Monitoring
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-newrelic-key

# File Storage (Production)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET=monarch-documents-prod
S3_REGION=eu-west-1

# Domain Configuration
ALLOWED_ORIGINS=https://monarch-legal.com,https://www.monarch-legal.com
API_BASE_URL=https://api.monarch-legal.com
FRONTEND_URL=https://monarch-legal.com

# Rate Limiting (Production)
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_FREE_TIER=3
RATE_LIMIT_PRO_TIER=100
RATE_LIMIT_ENTERPRISE_TIER=1000

# Logging
LOG_LEVEL=info

# Security Headers
HELMET_CSP_ENABLED=true
FORCE_HTTPS=true