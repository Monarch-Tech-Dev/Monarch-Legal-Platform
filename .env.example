# Monarch Legal Platform - Environment Configuration Template

# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://monarch:password@localhost:5432/monarch_dev
NEO4J_URL=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password
REDIS_URL=redis://localhost:6379

# Security Configuration (CHANGE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
ENCRYPTION_KEY=your-32-character-encryption-key-12
BCRYPT_ROUNDS=10

# AI Services Configuration (Optional)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# File Storage Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# External API Configuration (Optional)
NAV_API_KEY=your-nav-api-key
LOVDATA_API_KEY=your-lovdata-api-key
BRREG_API_KEY=your-brreg-api-key

# Email Configuration (Optional)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=your-email
SMTP_PASS=your-password
FROM_EMAIL=noreply@monarch-legal.com

# Monitoring & Analytics (Optional)
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-newrelic-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_FREE_TIER=3
RATE_LIMIT_PRO_TIER=100
RATE_LIMIT_ENTERPRISE_TIER=1000

# Development Settings
LOG_LEVEL=debug
ENABLE_CORS=true
ENABLE_SWAGGER=true
FRONTEND_URL=http://localhost:3001